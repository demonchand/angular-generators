<div ng-controller="<%= singular_name.pluralize %>Controller" ng-init="initialize()">
<p id="notice"><%%= notice %></p>

<h1>Listing <%= singular_name.pluralize %></h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <%% @<%= singular_name.pluralize.downcase %>.each do |<%= singular_name.downcase %>| %>
      <tr>
        <td><%%= <%= singular_name.downcase %>.name %></td>
        <td><%%= <%= singular_name.downcase %>.description %></td>
        <td><%%= <%= singular_name.downcase %>.price %></td>
        <td><%%= link_to 'Show', <%= singular_name.downcase %> %></td>
        <td><%%= link_to 'Edit', edit_<%= singular_name.downcase %>_path(<%= singular_name.downcase %>) %></td>
        <td><%%= link_to 'Destroy', <%= singular_name.downcase %>, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <%% end %>
  </tbody>
</table>

<br>


<!-- Form Dialog Box -->
<button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#add<%= singular_name %>">New <%= singular_name %></button>

<!-- Modal -->
<div id="add<%= singular_name %>" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Modal Header</h4>
      </div>
      <form ng-submit="submitForm()" class="contact" name="contact">
        <div class="modal-body">
              <label class="label" for="name">Your Name</label><br>
              <input type="text" ng-model="<%= singular_name.downcase %>.name" name="name" class="input-xlarge"><br>
              <label class="label" for="email">Your E-mail</label><br>
              <input type="email" ng-model="<%= singular_name.downcase %>.email" name="email" class="input-xlarge"><br>
              <label class="label" for="message">Enter a Message</label><br>
              <textarea name="message" ng-model="<%= singular_name.downcase %>.message" class="input-xlarge"></textarea>
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-default">Submit</button>
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </form>
    </div>

  </div>
</div>

</div>
